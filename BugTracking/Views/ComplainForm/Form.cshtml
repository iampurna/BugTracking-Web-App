    <script>var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }</script>

    <script>
      $(document).on('click','.btnClear',function(){
          clearform();
      })
        $(document).on('click', '.btnSubmit', function () {
            var customerid=$('.txtCustomerID').val();
            var fullname=$('.txtFullname').val();
            var address=$('.txtAddress').val();
            var contact=$('.txtContact').val();
            var email=$('.txtEmail').val();
            var statement=$('.txtStatement').val();
            var issuedate=$('.txtIssueDate').val();
            if (customerid == '') {
                Swal.fire({
                    title: "Oops!",
                    text: "Enter Your Customer ID!",
                    icon: "warning"
                });
            }
            else if (fullname == '') {
                Swal.fire({
                title: "Oops!",
                text: "Enter Your Full Name!",
                icon: "warning"
             });
            }
            else if (address == '') {
                Swal.fire({
                    title: "Oops!",
                    text: "Enter Your Address!",
                    icon: "warning"
                });
            }
            else if (contact == '') {
                Swal.fire({
                    title: "Oops!",
                    text: "Enter Your Contact Number!",
                    icon: "warning"
                });
            }
            else if (email == '') {
                Swal.fire({
                    title: "Oops!",
                    text: "Enter Your Email Address!",
                    icon: "warning"
                });
            }
           else if(statement==''){
                Swal.fire({
                    title: "Oops!",
                    text: "Enter Your Issue!",
                    icon: "warning"
        
                });
            }
            else if (issuedate == '') {
                 Swal.fire({
                    title: "Oops!",
                    text: "Enter Your Problem Issue Date!",
                    icon: "warning"
                 });
            }
            else {
                 if ($('#checkid').is(":checked")) {
                    $.ajax({
                        method: 'get',
                        contentType: "application/json; charset=utf-8",
                        url: '@Url.Action("Create", "ComplainForm")?CUSTOMERID=' + customerid + '&FULLNAME=' + fullname + '&ADDRESS=' + address + '&CONTACTNO=' + contact + '&EMAIL=' + email + '&STATEMENT=' + statement + '&ISSUEDATE=' + issuedate,
                        success: function (res) {
                            if (res.success) {
                                Swal.fire({
                                    title: "Thank you",
                                    text: (res.message),
                                    icon: "success"
                                });
                                clearform();
                            } else {
                                toastr["error"](res.message);
                            }
                        },
                        error: function (e) { },
                        beforeSend: function () {
                            //$.blockUI();
                        },
                        complete: function () {
                            //   $.unblockUI();
                        }
                    });
                } else {
                    Swal.fire({
                        title: "wait",
                        text: "Agree Terms and Conditions First",
                        icon: "info"
                    });
                }
            }
        });
        function clearform() {
          $('.txtCustomerID').val('');
          $('.txtFullname').val('');
          $('.txtAddress').val('');
          $('.txtContact').val('');
          $('.txtEmail').val('');
          $('.txtStatement').val('');
          $('.txtIssueDate').val('');
      }
    </script>
</body>
</html>
