@model List<BugTracking.Models.ViewModel.ComplainInfoViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complain Data Table</title>
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="mt-4">
            <h3>Complain Data</h3>
            <table id="complainDataTable" class="table table-striped table-bordered display">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Complain Name</th>
                        <th>Statement</th>
                        <th>Customer No</th>
                        <th>Is Active</th>
                        <th>Created Date</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody class="data-list">
                </tbody>
            </table>
        </div>
    </div>

    <script>
        <script>
     $(document).ready(function (){
         loadData();

     });
        $(document).ready(function () {

            $('#complainDataTable').DataTable({
                "ajax": {
                    "url": '@Url.Action("GetComplainData", "Tracking")',
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Fullname" },
                    { "data": "ComplainName" },
                    { "data": "Statement" },
                    { "data": "CustomerNo" },
                    { "data": "IsActive" },
                    { "data": "CreatedDate" },
                    { "data": "Remarks" }
                ],
                "columnDefs": [
                    {
                        "targets": 4,
                        "render": function(data, type, row) {
                            return data ? 'Yes' : 'No';
                        }
                    },
                    {
                        "targets": 5,
                        "render": function(data, type, row) {
                            return new Date(data).toLocaleDateString();
                        }
                    }
                ],
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "pageLength": 10,
                "pagingType": "simple_numbers",
                "language": {
                    "search": "Search:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                }
            });
        });
    </script>
</body>
</html>

